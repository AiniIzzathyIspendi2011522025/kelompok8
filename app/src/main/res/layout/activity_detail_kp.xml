<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKP">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="serif"
        android:text="Detail KP"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:layout_marginTop="72dp"
        android:background="@color/material_dynamic_neutral95"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:backgroundTintMode="screen"
        android:bufferType="spannable"
        android:elevation="10dp"
        android:ellipsize="end"
        android:fadingEdge="vertical"
        android:fontFamily="@font/averia_gruesa_libre"
        android:onClick="onButtonLaporanSelesai"
        android:shadowColor="#786E6E"
        android:text="Laporan Selesai"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:layout_marginTop="40dp"
        android:background="@color/material_dynamic_neutral95"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:backgroundTintMode="screen"
        android:bufferType="spannable"
        android:elevation="10dp"
        android:ellipsize="end"
        android:fadingEdge="vertical"
        android:fontFamily="@font/averia_gruesa_libre"
        android:onClick="onButtonDataSeminar"
        android:shadowColor="#786E6E"
        android:text="Data Seminar KP"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:layout_marginTop="175dp"
        android:background="@color/material_dynamic_neutral95"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:backgroundTintMode="screen"
        android:bufferType="spannable"
        android:elevation="10dp"
        android:ellipsize="end"
        android:fadingEdge="vertical"
        android:fontFamily="@font/averia_gruesa_libre"
        android:onClick="onButtonLogbook"
        android:shadowColor="#786E6E"
        android:text="Logbook"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:layout_marginTop="40dp"
        android:background="@color/material_dynamic_neutral95"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:backgroundTintMode="screen"
        android:bufferType="spannable"
        android:elevation="10dp"
        android:ellipsize="end"
        android:fadingEdge="vertical"
        android:fontFamily="@font/averia_gruesa_libre"
        android:onClick="onButtonBalasanKP"
        android:shadowColor="#786E6E"
        android:text="Balasan Permohonan KP"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home1"
        tools:ignore="SpeakableTextPresentCheck"
        android:onClick="onButtonHome"
        />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:onClick="onButtonProfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>